package practise;


/**
 * @author RV
 *
 */
public class SprialDiagonals {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
	long sum1 = 1L;
	int a=1;
		for(int i=1;i<1001;i++){
			a = a + 2*i;
			sum1 = sum1+a;
		}
		int b=1;
		long sum2 = 0L;
		for(int i=1;i<=1001/2;i++){
			b = b + 4*i;
			sum2 = sum2+b;
			b = b + 4*i;
			sum2 = sum2+b;
		}
		System.out.println(sum1+sum2);

	}

}
